---
// Foundations
import "../styles/global.css";
import BaseHead from "@/components/foundations/head/BaseHead.astro";

// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/Navigation.astro";

// Hides nav and footer on selected screens by passing
// the hideNav and hideFooter props
// <BaseLayout hideNav={true} hideFooter={true}>
const { hideNav = false, hideFooter = false } = Astro.props;
---

<html
  lang="en"
  class="scroll-smooth selection:bg-sand-100 selection:text-accent-500"
>
  <head>
    <BaseHead />
  </head>
  <body>
    { !hideNav && <Navigation /> }

    <main class="grow pt-18">
      <slot />
    </main>

    { !hideFooter && <Footer /> }
  </body>
</html>

<style>
  body{
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 100svh;
    background-color: light-dark(var(--color-sand-50), var(--color-base-900));    
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
  }
</style>