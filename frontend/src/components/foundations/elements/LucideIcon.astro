---
import { BrainCircuit,
  PencilRuler,
  HeartHandshake,
  Handshake,
  MapPinned,
  BrushCleaning,
  Award,
  ShieldCheck,
  LockKeyhole,
  HatGlasses,
  FlaskConical,
  Activity,
  Gauge,
  ImageUp,
  WandSparkles,
  Film,
  HandPlatter,
  Cable,
  Send,
  Sprout,
  ScrollText,
  AppWindow,
  PartyPopper,
  Star, 
  LibraryBig,
  Earth,
  Palette,
  TabletSmartphone,
} from '@lucide/astro';


import type { AllowedIcon } from '@/data/constants';

interface Props {
  icon: AllowedIcon;
  size?: "sm" | "base" | "lg";
  class?: string;
}

const { icon, size = "base", class: className } = Astro.props;

// Size classes mapping
const sizeClasses = {
  sm: "size-4",
  base: "size-6",
  lg: "size-10",
};

const sizeClass = sizeClasses[size];

// Map icon names to their components
const iconMap = {
  'brain-circuit': BrainCircuit,
  'pencil-ruler': PencilRuler,
  'heart-handshake': HeartHandshake,
  'handshake': Handshake,
  'map-pinned': MapPinned,
  'brush-cleaning': BrushCleaning,
  'award': Award,
  'shield-check': ShieldCheck,
  'lock-keyhole': LockKeyhole,
  'hat-glasses': HatGlasses,
  'flask-conical': FlaskConical,
  'activity': Activity,
  'gauge': Gauge,
  'image-up': ImageUp,
  'wand-sparkles': WandSparkles,
  'film': Film,
  'hand-platter': HandPlatter,
  'cable': Cable,
  'send': Send,
  'sprout': Sprout,
  'scroll-text': ScrollText,
  'app-window': AppWindow,
  'party-popper': PartyPopper,
  'star': Star,
  'library-big': LibraryBig,
  'earth': Earth,
  'palette': Palette,
  'tablet-smartphone': TabletSmartphone,
};

const IconComponent = iconMap[icon];
---

<IconComponent class={`${sizeClass} ${className}`} />
