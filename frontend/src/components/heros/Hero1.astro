---
// Assets
import { Image } from "astro:assets";
import Dashboard from "@/images/assets/dashboard.jpg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="pt-32 pb-4">
    <div class="text-center text-balance">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-serif font-medium tracking-tight text-black"
      >
        Email delivery that doesn’t suck and won’t vanish into the spam abyss
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="max-w-xl mx-auto mt-4 text-base-500"
      >
        Stop wondering if your transactional and marketing emails made it. Send
        at scale, hit inboxes, and skip the mystery.
      </Text>
    </div>
    <div
      class="flex flex-wrap items-center justify-center w-full mt-10 just gap-2"
    >
      <Link size="sm" variant="accent" href="#_">Get started</Link>
      <Link size="sm" variant="muted" href="#_">Start free trial</Link>
    </div>
    <Image
      src={Dashboard}
      alt="Dashboard"
      class="w-full h-auto mt-8 rounded-xl"
    />
  </Wrapper>
</section>
