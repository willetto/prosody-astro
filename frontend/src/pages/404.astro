---
// foundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/foundations/elements/Text.astro";
import Link from "@/components/foundations/elements/Link.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper
      variant="standard"
      class="flex flex-col items-center justify-center pt-32 pb-4 lg:h-svh bg-sand-50"
    >
      <div class="text-center text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-serif font-medium tracking-tight brand-heading-color"
        >
          Oops. This page ghosted us.
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="max-w-xl mx-auto mt-4 brand-text-color"
        >
          Looks like what you're looking for doesnâ€™t exist. Maybe it got lost in
          the spam folder. Or maybe it never existed at all. Hard to say.
        </Text>
      </div>
      <div
        class="flex flex-wrap items-center justify-center w-full mt-10 gap-2"
      >
        <Link size="sm" variant="accent" href="/">Go to Homepage</Link>
        <Link size="sm" variant="muted" href="/forms/contact"
          >Still lost? Contact us</Link
        >
      </div>
    </Wrapper>
  </section>
</BaseLayout>
